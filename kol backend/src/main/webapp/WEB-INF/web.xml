<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" version="2.5">
    <servlet>
        <servlet-name>SystemServiceServlet</servlet-name>
        <servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
        <init-param>
            <param-name>services</param-name>
            <param-value>com.kolshop.kolshopbackend.endpoints.MyEndpoint,
                com.kolshop.kolshopbackend.endpoints.SessionEndPoint,
                com.kolshop.kolshopbackend.endpoints.ProductEndpoint,
                com.kolshop.kolshopbackend.endpoints.CommonEndpoint,
                com.kolshop.kolshopbackend.endpoints.InventoryEndpoint
            </param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>SystemServiceServlet</servlet-name>
        <url-pattern>/_ah/spi/*</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GenericServlet</servlet-name>
        <servlet-class>com.kolshop.kolshopbackend.servlets.GenericServlet</servlet-class>
        <load-on-startup>0</load-on-startup>
    </servlet>

    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>