<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.koleshop.appkoleshop">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />

    <permission
        android:name="com.koleshop.appkoleshop.permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.koleshop.appkoleshop.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.WRITE_SYNC_SETTINGS" />
    <uses-permission android:name="android.permission.AUTHENTICATE_ACCOUNTS" />
    <uses-permission android:name="android.permission.RECEIVE_SMS" />
    <uses-permission android:name="android.permission.READ_SMS" />

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

    <uses-feature android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:name="com.koleshop.appkoleshop.network.volley.VolleyUtil"
        android:allowBackup="true"
        android:icon="@mipmap/koleshop_logo"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.Base">
        <activity
            android:name="com.koleshop.appkoleshop.activities.InitialActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name="com.koleshop.appkoleshop.receiver.GcmBroadcastReceiver"
            android:exported="true"
            android:permission="com.google.android.c2dm.permission.SEND">
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.koleshop.appkoleshop" />
            </intent-filter>
        </receiver>

        <!-- SMS Receiver -->
        <receiver android:name="com.koleshop.appkoleshop.receiver.SmsReceiver">
            <intent-filter android:priority="99999">
                <action android:name="android.provider.Telephony.SMS_RECEIVED" />
            </intent-filter>
        </receiver>

        <service
            android:name="com.koleshop.appkoleshop.services.PushMessageProcessorService"
            android:exported="false" />
        <service
            android:name="com.koleshop.appkoleshop.services.RestCallService"
            android:exported="false" />

        <activity
            android:name="com.koleshop.appkoleshop.activities.GetStartedActivity"
            android:label="@string/title_activity_get_started" />
        <activity
            android:name="com.koleshop.appkoleshop.activities.ShopSettingsActivity"
            android:label="@string/title_activity_shop_settings" />
        <activity
            android:name="com.koleshop.appkoleshop.activities.LocationActivity"
            android:label="@string/title_activity_location" />
        <!-- Google Maps API Key -->
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="AIzaSyB8g4pxXoNrQcbR7Rp97C6bOtzHIVRvWag" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <service android:name="com.koleshop.appkoleshop.network.sync.AuthenticatorService">
            <intent-filter>
                <action android:name="android.accounts.AccountAuthenticator" />
            </intent-filter>

            <meta-data
                android:name="android.accounts.AccountAuthenticator"
                android:resource="@xml/authenticator" />
        </service>

        <provider
            android:name="com.koleshop.appkoleshop.network.sync.StubProvider"
            android:authorities="com.koleshop.appkoleshop.provider"
            android:exported="false"
            android:syncable="true" />

        <service
            android:name="com.koleshop.appkoleshop.network.sync.SyncService"
            android:exported="true">
            <intent-filter>
                <action android:name="android.content.SyncAdapter" />
            </intent-filter>

            <meta-data
                android:name="android.content.SyncAdapter"
                android:resource="@xml/syncadapter" />
        </service>

        <activity
            android:name="com.koleshop.appkoleshop.activities.TestActivity"
            android:label="@string/title_activity_test" />

        <service
            android:name="com.koleshop.appkoleshop.services.CloudEndpointService"
            android:exported="false" />
        <service
            android:name="com.koleshop.appkoleshop.services.SessionIntentService"
            android:exported="false" />

        <activity
            android:name="com.koleshop.appkoleshop.activities.HomeActivity"
            android:label="@string/title_activity_home" />

        <service
            android:name="com.koleshop.appkoleshop.services.CommonIntentService"
            android:exported="false" />

        <activity
            android:name="com.koleshop.appkoleshop.activities.VerifyPhoneNumberActivity"
            android:label="@string/title_activity_verify_phone_number"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name="com.koleshop.appkoleshop.activities.VerifyOTPActivity"
            android:label="@string/title_activity_verify_otp" />
        <activity
            android:name="com.koleshop.appkoleshop.activities.SelectSellerCategoryActivity"
            android:label="@string/title_activity_select_seller_category"
            android:theme="@style/AppTheme.Base" />
        <activity android:name="com.koleshop.appkoleshop.activities.InventoryProductActivity" />
        <activity
            android:name="com.koleshop.appkoleshop.activities.ProductEditActivity"
            android:label="@string/title_activity_product_edit"
            android:theme="@style/AppTheme.Base" />
        <activity
            android:name="com.koleshop.appkoleshop.activities.AddEditProductActivity"
            android:label="@string/title_activity_add_edit_product"></activity>
    </application>

</manifest>
