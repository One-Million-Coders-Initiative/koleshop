<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppTheme.Base">
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:colorControlHighlight">@color/highlight</item>
        <item name="spbStyle">@style/GNowProgressBar</item>
    </style>

    <style name="SwitchStyle">
        <item name="colorControlActivated">@color/primary</item>
    </style>

    <style name="BlackAppBarTheme" parent="@style/Theme.AppCompat.NoActionBar">

        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/pure_black</item>
        <item name="colorAccent">@color/white</item>

    </style>

    <!-- res/values-v21/styles.xml -->
    <style name="TransparentAppTheme" parent="AppTheme">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="GNowProgressBar" parent="SmoothProgressBar">
        <item name="spb_stroke_separator_length">0dp</item>
        <item name="spb_sections_count">3</item>
        <item name="spb_speed">1.8</item>
        <item name="spb_progressiveStart_speed">1.8</item>
        <item name="spb_progressiveStop_speed">1.8</item>
        <item name="spb_interpolator">spb_interpolator_linear</item>
        <item name="spb_mirror_mode">true</item>
        <item name="spb_reversed">true</item>
        <item name="spb_colors">@array/progress_bar_colors</item>
        <item name="spb_progressiveStart_activated">true</item>
    </style>

</resources>