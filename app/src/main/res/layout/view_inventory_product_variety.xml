<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_inventory_product_variety"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ice_cream" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="72dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center"
            android:id="@+id/ll_variety_click_area_1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_inventory_product_variety_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-light"
                android:gravity="left"
                android:maxLines="1"
                android:text="Vanilla - Ice cream cone"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_inventory_product_variety_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:gravity="right"
                android:maxLines="1"
                android:text="â‚¹ 20"
                android:textColor="@color/primary_text"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="16dp"
            android:id="@+id/ll_variety_click_area_2"
            android:paddingRight="16dp">

            <ImageView
                android:id="@+id/iv_inventory_product_variety"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_checkbox_false_focused"
                android:visibility="visible" />

            <ProgressBar
                android:id="@+id/pb_inventory_product_variety"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:clickable="false"
                android:focusable="false"
                android:indeterminate="true"
                android:indeterminateTint="@color/otherGreen"
                android:indeterminateTintMode="src_in"
                android:visibility="gone" />

        </LinearLayout>

        <!--CheckBox
            android:id="@+id/cb_inventory_product_variety"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:buttonTint="@color/primary"
            android:checked="true" /-->

    </LinearLayout>

</RelativeLayout>