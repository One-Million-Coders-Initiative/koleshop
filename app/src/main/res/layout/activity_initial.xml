<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".InitialActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/imageViewShopLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:src="@drawable/kolshop_logo" />

        <TextView
            android:id="@+id/textViewShopDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-40dp"
            android:text="buy or sell in local market"
            android:textSize="25sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/btn_buy_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:layout_weight="1"
                android:background="@null"
                android:elevation="8dp"
                android:onClick="goBuy"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_buy" />

            <ImageButton
                android:id="@+id/btn_sell_initial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="16dp"
                android:layout_weight="1"
                android:background="@null"
                android:elevation="8dp"
                android:onClick="goSell"
                android:padding="16dp"
                android:scaleType="fitCenter"
                android:src="@drawable/icon_sell" />

        </LinearLayout>
    </LinearLayout>

    <ProgressBar
        android:id="@+id/pb_initial_activity"
        android:layout_width="40dp"
        android:visibility="gone"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminate="true"
        android:layout_height="40dp" />


</RelativeLayout>
