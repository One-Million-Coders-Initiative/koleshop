<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".ui.seller.fragments.settings.HomeDeliveryFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="56dp"
        android:layout_marginBottom="48dp"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:layout_gravity="center"
            android:layout_marginBottom="16dp"
            android:src="@drawable/ic_delivery_boy_colored" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="Is home delivery available?"
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_initial_activity_buttons"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:gravity="bottom|center_horizontal">

        <Button
            android:id="@+id/button_home_delivery_settings_no"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="0dp"
            android:layout_marginRight="40dp"
            android:background="@drawable/roundedbutton"
            android:text="No \n Only Pickup"
            android:textColor="@color/white"
            android:onClick="buttonHomeDeliverySettingsNoClicked"/>

        <Button
            android:id="@+id/button_home_delivery_settings_yes"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="0dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/roundedbuttongreen"
            android:text="YES \n Available"
            android:textColor="@color/white"
            android:onClick="buttonHomeDeliverySettingsYesClicked"/>

    </LinearLayout>

</LinearLayout>
