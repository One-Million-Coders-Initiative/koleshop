<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.seller.fragments.orders.IncomingOrdersFragment">

    <ViewFlipper
        android:id="@+id/view_flipper_fragment_incoming_orders"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/image_cloud_disconnect" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-light"
                android:text="No incoming orders"
                android:textColor="@color/default_background_font" />

            <Button
                android:id="@+id/button_retry_incoming_orders"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:fontFamily="sans-serif-light"
                android:text="RETRY" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fragment_incoming_orders"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

    </ViewFlipper>

</FrameLayout>
