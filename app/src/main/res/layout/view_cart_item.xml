<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="8dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/civ_cart_item"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="88dp"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_name_cart_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Kitkat Krunchy Chocolate" />

        <RelativeLayout
            android:id="@+id/rl_view_cart_item"
            android:layout_width="wrap_content"
            android:layout_height="56dp">

            <TextView
                android:id="@+id/tv_unit_price_cart_item"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:text="Rs. 150"
                android:layout_marginLeft="8dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_multiply_cart_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_unit_price_cart_item"
                android:layout_marginLeft="8dp"
                android:text=" X "/>

            <com.koleshop.appkoleshop.ui.common.views.ItemCountView
                android:id="@+id/icv_cart_item"
                android:layout_width="wrap_content"
                android:layout_height="56dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/tv_multiply_cart_item"
                app:showZeroCount="false"/>

            <TextView
                android:id="@+id/tv_total_cart_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text="Rs. 500"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"/>

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>