<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    android:background="@color/offwhite"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:background="@color/accent_transparent"
        android:layout_marginTop="16dp"
        android:id="@+id/iv_ot_avatar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="72dp"
        android:layout_marginRight="64dp"
        android:layout_centerVertical="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sanjay Bhansali"
            android:textColor="@color/primary_text"
            android:maxLines="1"
            android:textSize="13sp"
            android:id="@+id/tv_ot_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_ot_order_status"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:maxLines="1"
                android:text="ASAP Home delivery, 2 mins ago"
                android:textColor="@color/secondary_text"
                android:textSize="13sp"
                android:id="@+id/tv_ot_details" />

        </LinearLayout>


    </LinearLayout>

    <TextView
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/primary_text"
        android:textSize="16sp"
        android:textStyle="bold"
        android:text="Rs. 220"
        android:layout_alignParentRight="true"
        android:layout_marginRight="16dp"
        android:gravity="right"
        android:id="@+id/tv_ot_price"
        android:layout_marginTop="16dp"
        android:layout_alignParentTop="true"
        android:paddingTop="2dp" />

</RelativeLayout>