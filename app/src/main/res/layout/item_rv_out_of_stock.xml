<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="2dp"
    app:cardCornerRadius="2dp"
    android:elevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="4dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_avatar_oos"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp" />

        <TextView
            android:id="@+id/tv_oos_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="72dp"
            android:text="Dove moisturising soap" />

        <TextView
            android:id="@+id/tv_oos_subtitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_oos_title"
            android:layout_marginLeft="72dp"
            android:text="50gm - Rs 35" />

        <Button
            android:id="@+id/button_back_in_stock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACK IN STOCK"
            android:textColor="@color/accent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_below="@id/tv_oos_title"/>

    </RelativeLayout>

        <com.zl.reik.dilatingdotsprogressbar.DilatingDotsProgressBar
            android:id="@+id/pb_status_oos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:radius="2dp"
            android:color="@color/accent"
            app:dd_numDots="10"
            app:dd_scaleMultiplier="1.8"
            app:dd_animationDuration="500"
            app:dd_horizontalSpacing="2dp"
            android:visibility="gone"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="2dp"
            />

    </LinearLayout>

</android.support.v7.widget.CardView>