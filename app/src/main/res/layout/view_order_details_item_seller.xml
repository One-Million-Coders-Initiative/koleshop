<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:orientation="vertical"
    android:padding="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kitkat Krunchy Chocolate 55 gm"
        android:textColor="@color/primary_text"
        android:textSize="14sp"
        android:id="@+id/tv_vodis_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="1 X Rs. 150"
        android:textColor="@color/primary_text"
        android:textSize="12sp"
        android:id="@+id/tv_vodis_count_x_price" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="Rs. 150"
        android:textColor="@color/primary_text"
        android:textSize="14sp"
        android:id="@+id/tv_vodis_price" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="48dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginRight="4dp"
            style="@style/Widget.Design.FloatingActionButton"
            android:text="-"
            android:id="@+id/button_vodis_minus" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:textColor="@color/primary_text"
            android:id="@+id/tv_vodis_count" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            style="@style/Widget.Design.FloatingActionButton"
            android:text="+"
            android:id="@+id/button_vodis_plus" />

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginLeft="4dp"
            android:src="@drawable/ic_green_tick"
            android:id="@+id/iv_vodis_status" />

    </LinearLayout>

</RelativeLayout>