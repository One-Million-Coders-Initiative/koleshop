<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:gravity="bottom"
    android:id="@+id/linear_layout_product_property">

            <me.grantland.widget.AutofitLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edittext_property"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="product info"
                    android:textSize="16sp"
                    android:imeOptions="actionNext"
                    android:maxLines="1"
                    android:singleLine="true"></EditText>

            </me.grantland.widget.AutofitLayout>

            <me.grantland.widget.AutofitLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edittext_property_value"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="info value"
                    android:textSize="16sp"
                    android:imeOptions="actionDone"
                    android:maxLines="1"
                    android:singleLine="true" />

            </me.grantland.widget.AutofitLayout>

        <Spinner
            android:id="@+id/spinner_product_property_unit"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center_vertical"></Spinner>

</LinearLayout>