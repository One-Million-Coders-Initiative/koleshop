<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    android:layout_marginTop="4dp"
    android:elevation="2dp"
    app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/civ_avatar_msst"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:background="@color/otherGreen"
                android:layout_marginBottom="16dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">

                <TextView
                    android:id="@+id/tv_title_msst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="72dp"
                    android:textColor="@color/white"
                    android:text="Jagga Funky Store"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/tv_subtitle_msst"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginLeft="72dp"
                    android:text="Sector 23"
                    android:textSize="12dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_distance_msst"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="16dp"
                android:layout_marginTop="16dp"
                android:text="110 m"
                android:textColor="@color/white"
                android:textSize="12dp" />

        </RelativeLayout>

        <!--fragment that have search results will be added here-->

        <Button
            android:id="@+id/button_more_results_msst"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="23 search results"
            android:layout_gravity="right"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:drawablePadding="8dp"
            android:textColor="@color/accent"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:drawableRight="@drawable/ic_arrow_forward_accent_24dp"/>

    </LinearLayout>

</android.support.v7.widget.CardView>